<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <!-- Header -->
    <include
        android:id="@+id/includeHeader"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Divider debajo del Header -->
    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="#FFFFFFFF" />

    <!-- RecyclerView para mostrar productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Botón para ir al mapa -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGoToMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir al mapa"
        android:layout_marginVertical="8dp"
        android:drawableStart="@drawable/ic_menu_mapmode"
        style="?attr/materialButtonStyle" />

    <!-- Botón para ir al carrito -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGoToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir al carrito"
        android:layout_marginVertical="8dp"
        android:drawableStart="@drawable/ic_menu_cart"
        style="?attr/materialButtonStyle" />

    <!-- Botón para iniciar sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:layout_marginVertical="8dp"
        android:drawableStart="@drawable/ic_menu_login"
        style="?attr/materialButtonStyle" />

    <!-- FloatingActionButton para agregar producto -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        app:backgroundTint="@color/colorAccent"
        android:contentDescription="Agregar Producto"
        android:src="@drawable/ic_add" />
</LinearLayout>